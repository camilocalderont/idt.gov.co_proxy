# Dockerfile para Drupal 8 con LiteSpeed
FROM litespeedtech/openlitespeed:1.7.19-lsphp74

# Información del mantenedor
LABEL maintainer="IDT Developer"
LABEL description="Drupal 8 with OpenLiteSpeed and PHP 7.4"

# Variables de entorno
ENV DEBIAN_FRONTEND=noninteractive
ENV PHP_VERSION=74
ENV DRUPAL_VERSION=8

# Actualizar sistema e instalar dependencias
RUN apt-get update && apt-get install -y \
    curl \
    wget \
    git \
    unzip \
    vim \
    cron \
    supervisor \
    mysql-client \
    && rm -rf /var/lib/apt/lists/*

# Verificar instalación de PHP
RUN /usr/local/lsws/lsphp${PHP_VERSION}/bin/php -v

# Instalar extensiones PHP necesarias para Drupal 8
RUN apt-get update && apt-get install -y \
    lsphp${PHP_VERSION}-mysql \
    lsphp${PHP_VERSION}-curl \
    lsphp${PHP_VERSION}-gd \
    lsphp${PHP_VERSION}-mbstring \
    lsphp${PHP_VERSION}-xml \
    lsphp${PHP_VERSION}-zip \
    lsphp${PHP_VERSION}-opcache \
    lsphp${PHP_VERSION}-imagick \
    lsphp${PHP_VERSION}-intl \
    lsphp${PHP_VERSION}-bcmath \
    lsphp${PHP_VERSION}-json \
    && rm -rf /var/lib/apt/lists/*

# Configurar directorio de trabajo
WORKDIR /var/www/html

# Instalar Composer (versión compatible con PHP 7.4)
RUN curl -sS https://getcomposer.org/installer | /usr/local/lsws/lsphp${PHP_VERSION}/bin/php -- --install-dir=/usr/local/bin --filename=composer

# Configurar PHP para Drupal 8
COPY php74.ini /usr/local/lsws/lsphp${PHP_VERSION}/etc/php/${PHP_VERSION}/litespeed/php.ini

# Configurar LiteSpeed para Drupal 8
COPY httpd_config_drupal8.conf /usr/local/lsws/conf/httpd_config.conf
COPY vhosts_drupal8.conf /usr/local/lsws/conf/vhosts/drupal8/vhconf.conf

# Crear directorios necesarios
RUN mkdir -p /var/www/html/sites/default/files && \
    mkdir -p /var/www/html/sites/default/files/translations && \
    chown -R nobody:nogroup /var/www/html && \
    chmod -R 755 /var/www/html/sites/default/files

# Script de entrada personalizado
COPY entrypoint_drupal8.sh /usr/local/bin/entrypoint.sh
RUN chmod +x /usr/local/bin/entrypoint.sh

# Configurar permisos para Drupal 8
RUN chown -R nobody:nogroup /var/www/html && \
    find /var/www/html -type d -exec chmod 755 {} \; && \
    find /var/www/html -type f -exec chmod 644 {} \;

# Exponer puerto
EXPOSE 80 443

# Comando de entrada
ENTRYPOINT ["/usr/local/bin/entrypoint.sh"]
CMD ["/usr/local/lsws/bin/lshttpd", "-D"]